<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<style name = "wrap">
		<item name = "android:layout_width">wrap_content</item>
		<item name = "android:layout_height">wrap_content</item>
	</style>
	
	<style name = "w_match_h_wrap">
		<item name = "android:layout_width">match_parent</item>
		<item name = "android:layout_height">wrap_content</item>
	</style>
    
	<style name = "match">
		<item name = "android:layout_width">match_parent</item>
		<item name = "android:layout_height">match_parent</item>
	</style>
	
	<style name = "llChild">
		<item name = "android:layout_width">match_parent</item>
		<item name = "android:layout_height">wrap_content</item>
	</style>
	
    <style name = "gravityAddFinance">
        <item name = "android:gravity">left</item>
        <item name = "android:layout_gravity">left</item>
        <item name = "android:layout_width">wrap_content</item>
		<item name = "android:layout_height">wrap_content</item>
    </style>
    
    <style name = "delimiter">
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">36dp</item>
        <item name = "android:layout_gravity">center_horizontal</item>
        <item name = "android:gravity">center_horizontal|center_vertical</item>
        <item name = "android:background">#ccc8c8</item>
        <item name = "android:textColor">#000000</item>
        <item name = "android:textSize">18sp</item>
    </style>
    
    <style name = "list_item_3_point">
    	<item name = "android:layout_width">match_parent</item>
    	<item name = "android:layout_height">16dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>
    
    <style name = "list_item_2_points">
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:height">24dp</item>
    </style>

    <style name = "list_item_2_items">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingRight">5dp</item>
    </style>
</resources>