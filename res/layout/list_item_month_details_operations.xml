<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_height="@dimen/operation_main_height"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/margin_details_horizontal"
        android:layout_marginRight="@dimen/margin_details_horizontal">

        <TextView
            android:id = "@+id/tvFinanceOperationDetails1"
            android:layout_width="match_parent"
            android:layout_weight="1.0"
            android:layout_height = "match_parent"
            android:textSize="@dimen/operation_big_text"
            android:gravity = "left"
            android:layout_gravity="left"
            android:text = "описание"
            android:singleLine="true"
            />

        <TextView
            android:id = "@+id/tvShowTotalCost1"
            android:layout_width="match_parent"
            android:layout_height = "match_parent"
            android:layout_weight = "1.0"
            android:textSize="@dimen/operation_big_text"
            android:gravity="right"
            android:layout_gravity="right"
            android:text = "200"
            android:singleLine="true"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_height="@dimen/operation_small_height"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/margin_details_horizontal"
        android:layout_marginRight="@dimen/margin_details_horizontal"
        android:layout_marginBottom="@dimen/margin_details_vertical">

        <TextView
            android:id="@+id/tvShowCategory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:textSize="@dimen/operation_small_size"
            android:layout_gravity="left|bottom"
            android:gravity="left"
            android:singleLine="true"
            android:text="категория"/>

        <TextView
            android:id="@+id/tvShowDate1"
            android:layout_width="match_parent"
            android:layout_height = "15dp"
            android:layout_weight="1.0"
            android:textSize="@dimen/operation_small_size"
            android:layout_gravity="right|bottom"
            android:gravity="right"
            android:text = "дата"
            />
    </LinearLayout>
</LinearLayout>