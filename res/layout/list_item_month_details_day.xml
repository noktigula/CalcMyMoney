<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="@dimen/list_item_heigh">

    <TextView android:id="@+id/tvDayNumber"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="45 ноября"
            android:textSize="@dimen/operation_big_text"
            android:layout_gravity="left"
            android:gravity="center_horizontal|center_vertical"
            android:layout_weight="1.0"
            />

    <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000000"
            android:paddingTop="@dimen/margin_details_vertical"
            android:paddingBottom="@dimen/margin_details_vertical"
            android:layout_marginTop="@dimen/margin_details_vertical"
            android:layout_marginBottom="@dimen/margin_details_vertical"
            />

    <TextView android:id="@+id/tvDayIncome"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:text="100500"
              android:textSize="@dimen/operation_big_text"
              android:layout_gravity="left"
              android:gravity="center_horizontal|center_vertical"
              android:layout_weight="1.0"
              android:background="@color/income_view_background"
            />

    <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000000"
            android:layout_marginTop="@dimen/margin_details_vertical"
            android:layout_marginBottom="@dimen/margin_details_vertical"
            />

    <TextView android:id="@+id/tvDayExpend"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:text="999666"
              android:textSize="@dimen/operation_big_text"
              android:layout_gravity="left"
              android:gravity="center_horizontal|center_vertical"
              android:layout_weight="1.0"
              android:background="@color/expend_view_background"
            />
</LinearLayout>