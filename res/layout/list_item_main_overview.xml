<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/operation_main_height"
        android:layout_marginLeft="@dimen/margin_details_horizontal"
        android:layout_marginRight="@dimen/margin_details_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id = "@+id/tvMainMonthTitle"
            android:textSize="@dimen/operation_big_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="Июнь"
            android:layout_gravity="left"
            android:singleLine="true"/>

        <TextView
            android:id = "@+id/tvMainMonthBalance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:textSize="@dimen/operation_big_text"
            android:text = "0p"
            android:gravity="right"/>
    </LinearLayout>

    <LinearLayout
        android:layout_height="@dimen/operation_small_height"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/margin_details_horizontal"
        android:layout_marginRight="@dimen/margin_details_horizontal"
        android:layout_marginBottom="@dimen/margin_details_horizontal">

        <TextView
            android:id = "@+id/tvMainMonthIncome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/operation_small_text"
            android:text = "100p"
            android:gravity="left"
            android:singleLine="true"
            android:layout_weight="1.0"
        />

        <TextView
            android:id = "@+id/tvMainMonthExpend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/operation_small_text"
            android:text = "100p"
            android:gravity="right"
            android:singleLine="true"
            android:layout_gravity="right"
            android:layout_weight="1.0"
        />

  </LinearLayout>
</LinearLayout>